{
    "version": 2,
    "builds": [
      {
        "src": "server.js",
        "use": "@vercel/node"
      },
      {
        "src": "public/**",
        "use": "@vercel/static"
      }
    ],
    "routes": [
      {
        "src": "/ws",
        "dest": "server.js",
        "headers": { "Upgrade": "websocket" }
      },
      {
        "src": "/(.*)",
        "dest": "public/$1"
      }
    ]
  }